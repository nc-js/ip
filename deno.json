{
	"name": "@nc/ip",
	"version": "0.9.0",
	"license": "MIT",
	"tasks": {
		"check": "deno check ./src/mod.ts",
		"test": "rm -rf coverage && deno test -A src/ --doc README.md --coverage",
		"htmldocs": "deno doc --html ./src/mod.ts",
		"lintdocs": "deno doc --lint ./src/mod.ts"
	},
	"publish": {
		"include": [
			"src/",
			"!src/**/*_test.ts",
			"README.md",
			"LICENSE"
		]
	},
	"exports": {
		".": "./src/mod.ts",
		"./v4": "./src/v4/mod.ts",
		"./v6": "./src/v6/mod.ts",
		"./socket": "./src/socket/socket.ts"
	},
	"imports": {
		"@nc/whatwg-infra": "jsr:@nc/whatwg-infra@^1.1.0",
		"@std/assert": "jsr:@std/assert@^1.0.8",
		"@std/random": "jsr:@std/random@^0.1.0"
	},
	"fmt": {
		"include": [
			"bench/",
			"src/"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/"
		]
	}
}
